<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <% res.redirect('/') %>
<% } %>

<!-- Message Block -->
<%- messages() %>

<h2>Welcome <%= account_firstname %></h2>

<h3>Account Management</h3>
<p><a href="/account/update">Edit account data</a></p>
<!-- < %= account_id % > -->
<% if (account_type !== "Client") { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/admin">Edit inventory data</a></p>
<% } %>

<% if (errors) { %>
  <ul class="bad-notice">
    <% errors.array().forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<p>You're logged in!</p>